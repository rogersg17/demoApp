# Azure DevOps Configuration
ADO_ORGANIZATION=https://dev.azure.com/yourorganization
ADO_PROJECT=YourProjectName
ADO_PAT=your-personal-access-token-here
ADO_ENABLED=false

# Work Item Configuration
ADO_AUTO_CREATE_BUGS=true
ADO_AUTO_UPDATE_BUGS=true
ADO_BUG_AREA_PATH=YourProject\\Testing
ADO_BUG_ITERATION_PATH=YourProject\\Current
ADO_DEFAULT_ASSIGNEE=

# Test Management Configuration
ADO_AUTO_CREATE_TEST_CASES=false
ADO_TEST_PLAN_ID=
ADO_TEST_SUITE_ID=
ADO_PUBLISH_TEST_RESULTS=true

# Pipeline Integration
ADO_WEBHOOK_SECRET=generate-a-secure-random-string
ADO_BUILD_TRIGGER_TESTS=true
ADO_RELEASE_TRIGGER_TESTS=true

# Pipeline Result Consumption Settings
ADO_CONSUME_BUILD_RESULTS=true
ADO_CONSUME_RELEASE_RESULTS=false
ADO_AUTO_SYNC_ON_COMPLETION=true
ADO_HISTORICAL_DATA_DAYS=30

# Project Status Configuration
# Health thresholds as JSON: {"healthy":90,"warning":75,"critical":50}
ADO_PROJECT_HEALTH_THRESHOLDS={"healthy":90,"warning":75,"critical":50}
ADO_TREND_CALCULATION_DAYS=30
ADO_AUTO_GENERATE_REPORTS=true

# Webhook Configuration
ADO_BUILD_COMPLETE_WEBHOOK=true
ADO_RELEASE_COMPLETE_WEBHOOK=false

# Notification Configuration
ADO_TEAMS_WEBHOOK=
ADO_NOTIFY_ON_FAILURE=true
ADO_NOTIFY_ON_SUCCESS=false
ADO_NOTIFY_ON_HEALTH_CHANGE=true
ADO_NOTIFY_ON_CRITICAL_FAILURES=true
ADO_EMAIL_REPORTS=

# Data Management
ADO_DATA_RETENTION_DAYS=365
ADO_CLEANUP_OLD_DATA=true
ADO_BACKUP_BEFORE_CLEANUP=true

# Debug and Logging
ADO_DEBUG=false
ADO_LOG_LEVEL=info
ADO_LOG_TO_FILE=false
ADO_LOG_FILE_PATH=./logs/ado.log
