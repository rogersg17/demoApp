# ADR-001 TMS Configuration
# Test Management System environment variables for Git integration and test correlation

# ===================
# GIT INTEGRATION
# ===================
GIT_WEBHOOK_SECRET=your_secure_webhook_secret_here
GIT_DEFAULT_BRANCH=main
GIT_SCAN_INTERVAL=300
GIT_MAX_SCAN_DEPTH=10

# ===================
# TEST DISCOVERY
# ===================
TEST_DISCOVERY_ENABLED=true
TEST_DISCOVERY_INTERVAL=300
TEST_DISCOVERY_MAX_FILES=10000
TEST_AUTO_CORRELATION=true

# ===================
# PLATFORM INTEGRATIONS
# ===================
ENABLE_AZURE_DEVOPS=true
ENABLE_JIRA=true
ENABLE_GITHUB=false
ENABLE_GITLAB=false

# ===================
# TMS CONFIGURATION
# ===================
TMS_MODE=observer_orchestrator
CORRELATION_TIMEOUT=30000
CORRELATION_CACHE_SIZE=1000
CORRELATION_CONFIDENCE_THRESHOLD=0.7

# ===================
# WEBHOOKS
# ===================
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_TIMEOUT=10000
WEBHOOK_VERIFY_SSL=true

# ===================
# SCANNING
# ===================
SCAN_INCLUDE_HIDDEN=false
SCAN_FOLLOW_SYMLINKS=false
SCAN_DEPENDENCIES=true
SCAN_ANALYZE_COMPLEXITY=false

# ===================
# DATABASE
# ===================
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=86400
DB_VACUUM_INTERVAL=604800

# ===================
# LOGGING
# ===================
LOG_LEVEL=info
LOG_GIT_EVENTS=true
LOG_CORRELATION_STATS=true
LOG_SCAN_RESULTS=true

# ===================
# PERFORMANCE
# ===================
MAX_CONCURRENT_SCANS=3
MAX_SCAN_DURATION=300000
CACHE_CLEANUP_INTERVAL=3600

# ===================
# SECURITY
# ===================
WEBHOOK_SECRET_MIN_LENGTH=32
REQUIRE_WEBHOOK_SIGNATURES=true
RATE_LIMIT_WEBHOOKS=true
