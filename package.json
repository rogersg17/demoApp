{
  "name": "demoapp",
  "version": "1.0.0",
  "description": "Demo web application with user management and Playwright tests",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:static": "USE_SERVER=false playwright test",
    "test:user-management": "playwright test tests/user-management.spec.ts",
    "test:user-management:headed": "playwright test tests/user-management.spec.ts --headed",
    "test:report": "playwright show-report"
  },
  "keywords": [
    "demo",
    "express",
    "webapp",
    "user-management",
    "playwright",
    "testing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/node": "^24.1.0",
    "start-server-and-test": "^2.0.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}
