# Production Environment Configuration
# Test Management Platform - MVP Production Environment

# Application Settings
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
DATABASE_PATH=/app/data/app.db
DATABASE_BACKUP_PATH=/app/backups/
DATABASE_BACKUP_INTERVAL=86400000

# Azure DevOps Configuration
ADO_BASE_URL=https://dev.azure.com
ADO_TIMEOUT=30000
ADO_RETRY_ATTEMPTS=3

# JIRA Configuration
JIRA_TIMEOUT=30000
JIRA_RETRY_ATTEMPTS=3

# Security Settings
SESSION_SECRET=CHANGE_THIS_IN_PRODUCTION
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/tms.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Performance Settings
CACHE_TTL=300000
MAX_PIPELINE_MONITORS=100
WEBSOCKET_HEARTBEAT_INTERVAL=30000

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=60000
METRICS_ENABLED=true
METRICS_PORT=9090
